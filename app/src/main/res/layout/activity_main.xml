<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="5dp"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="Player 1"/>

            <TextView
                android:id="@+id/tv_player1_secret"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_height="0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:background="@color/black"
            android:orientation="vertical"
            android:layout_height="match_parent">
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_game_status"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:text=""
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_game_result"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:layout_height="0dp"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:background="@color/black"
            android:orientation="vertical"
            android:layout_height="match_parent">
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:text="Player 2"/>

            <TextView
                android:id="@+id/tv_player2_secret"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_height="0dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/black"
        android:orientation="horizontal"
        android:layout_height="1dp">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fl_player1_guesses"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
        </FrameLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:orientation="vertical"
            android:background="@color/black"
            android:layout_height="match_parent"/>

        <FrameLayout
            android:id="@+id/fl_player2_guesses"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/black"
        android:orientation="horizontal"
        android:layout_height="1dp">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="2dp"
        android:layout_weight="0.7"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/tv_player1_round"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/b_start_game"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:layout_weight="0.5"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:text="start"/>

        <TextView
            android:id="@+id/tv_player2_round"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>